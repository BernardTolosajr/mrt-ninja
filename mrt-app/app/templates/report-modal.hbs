{{#report-modal title="Report" ok='save' close='removeModal'}}
  <form {{action 'ok' on='submit'}}>
    <div class="form-group">
      <label>Reporty Type</label>
      {{view "select"
        content=types
        value=selectedType
        prompt="Please select a type"
        class="form-control"}}
    </div>

    <div class="form-group">
      <label>Station</label>
      {{view "select"
        content=stations
        value=selectedStation
        optionLabelPath="content.name"
        prompt="Please select a station"
        class="form-control"}}
    </div>

    {{!--
    <div class="form-group">
      <div class="input-field col s8">
        <textarea id="message" class="materialize-textarea"></textarea>
        <label for="message">Message</label>
      </div>
    </div>
    --}}
  </form>
{{/report-modal}}
